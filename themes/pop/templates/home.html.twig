{% extends 'partials/base.html.twig' %}


{% block header %}
    {% include 'partials/header.html.twig' %}
{% endblock %}




{% block content %}

{{ page.content }}  {# ALLOWS ARBITRARY COMMENT BEFORE LISTING #}

<div class="pure-g">  

  <div class="pure-u-1 pure-u-md-3-4">



{% for art in page.collection %}
    <div class="articlelink">
       <a href="{{ art.url }}">{{ art.title }}{% if array_key_exists('subtitle', art.header) %}: {{ art.header.subtitle|e('html') }}{% endif %}</a>
       <span class="authorname">

     {% for au in art.header.author %}
        {{ au.name|e('html') }}{% if not loop.last %},{% endif %}
     {% endfor %}

       </span>
    </div>
{% endfor %} 

{% endblock %}

{% block footer %}
    {% include 'partials/footer.html.twig' %}
{% endblock %}

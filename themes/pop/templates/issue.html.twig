{% extends 'partials/base.html.twig' %}


{% block header %}
    {% include 'partials/header.html.twig' %}
    {% include 'partials/breadcrumbs.html.twig' %}
{% endblock %}




{% block content %}

<h1 class="title">{{ header.title|e('html') }}</h1>

<div class="pure-g">  

  <div class="pure-u-1 pure-u-md-3-4">
    {% if array_key_exists('subtitle', header) %} <h1 class="subtitle">{{ header.subtitle|e('html') }}</h1>{% endif %}


  <p>Published {{ header.pubdate|date("M d, Y")}}</p>

{{ page.content }}  {# ALLOWS ARBITRARY COMMENT BEFORE LISTING #}


{% for art in page.collection %}
    <div class="articlelink">
       <a href="{{ art.url }}">{{ art.title }}{% if array_key_exists('subtitle', art.header) %}: {{ art.header.subtitle|e('html') }}{% endif %}</a>
       <span class="authorname">

     {% for au in art.header.author %}
        {{ au.name|e('html') }}{% if not loop.last %},{% endif %}
     {% endfor %}

       </span>
    </div>
{% endfor %} 

{% endblock %}

{% block footer %}
    {% include 'partials/footer.html.twig' %}
{% endblock %}

